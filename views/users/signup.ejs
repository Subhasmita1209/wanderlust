<% layout("./layouts/boilerplate") %>
<div class="row">
<div class="col-6 offset-3">
    <h1 class="mt-3 offset-2 ">Signup on Wanderlust</h1>
    <form method="POST"action="/signup" class="needs-validation mt-3" novalidate>
        <div class="mb-3">
        <label for="username" class="form-label"><b>Username</b></label>
        <input name="username" id="username"type="text" class="form-control" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter username</div>
        </div>
         <div class="mb-3">
        <label for="email" class="form-label"><b>Email</b></label>
        <input name="email" id="email"type="email" class="form-control" required>
        <div class="invalid-feedback">Please enter email</div>
        </div>
         <div class="mb-3">
        <label for="password" class="form-label"><b>Paasword</b></label>
        <input name="password" id="password"type="password" class="form-control" required>
        <div class="invalid-feedback">Enter password</div>
        </div>
        <button class="btn btn-dark add-btn">Signup</button>
    </form>
    
  </div>
</div>